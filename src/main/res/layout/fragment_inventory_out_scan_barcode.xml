<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scan_tab"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edt_scan_barcode"
        android:hint="扫描条码"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_margin="8dp"
        android:gravity="center_horizontal" />

    <com.lmis.util.controls.YardsOrgSpinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_yards_select"
        android:spinnerMode="dropdown"
        android:layout_margin="5dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_drop_shadow"
        android:padding="8dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="票号"
            android:textStyle="bold"
            style="?android:attr/listSeparatorTextViewStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txv_bill_no"
            android:padding="8dp"
            android:text="无" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="到货地"
            android:textStyle="bold"
            style="?android:attr/listSeparatorTextViewStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txv_to_org_name"
            android:padding="8dp"
            android:text="无" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="总件数"
            android:textStyle="bold"
            style="?android:attr/listSeparatorTextViewStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txv_goods_num"
            android:padding="8dp"
            android:text="0" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="true"
            android:layout_gravity="top"
            android:layout_margin="8dp">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:background="#fff"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="共"
                    android:layout_weight="2"
                    android:gravity="center_vertical|center_horizontal" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/btn_sum_goods_num"
                    android:layout_weight="4"
                    android:textSize="30dp"
                    android:background="#fff" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="件"
                    android:layout_weight="2"
                    android:gravity="center_vertical|center_horizontal" />

            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow"
                android:gravity="center_vertical"
                android:background="#fff"
                android:layout_marginBottom="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="共"
                    android:layout_weight="2"
                    android:gravity="center_vertical|center_horizontal" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/btn_sum_bills_count"
                    android:layout_weight="4"
                    android:textSize="30dp"
                    android:background="#fff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="票"
                    android:id="@+id/textView6"
                    android:layout_weight="2"
                    android:gravity="center_vertical|center_horizontal" />

            </TableRow>
        </TableLayout>
    </LinearLayout>

</LinearLayout>
