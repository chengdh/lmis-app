<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_drop_shadow"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/txv_apply_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="5dp"
            android:text="DE0001"
            android:textColor="#498BF4"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txv_apply_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:padding="5dp"
            android:text="DE0001"
            android:textColor="#498BF4"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_drop_shadow"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txv_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:padding="5dp"
            android:text="项目名称"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="8">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="计划来源:" />

            <TextView
                android:id="@+id/txv_apply_source"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="运行部"
                android:textColor="#498BF4" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="计划类型:" />

            <TextView
                android:id="@+id/txv_apply_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="right"
                android:padding="5dp"
                android:text="2017-01-01"
                android:textColor="#498BF4"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="8">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="提报部门:" />

            <TextView
                android:id="@+id/txv_apply_deparment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="运行部"
                android:textColor="#498BF4" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="编制时间:" />

            <TextView
                android:id="@+id/txv_apply_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="right"
                android:padding="5dp"
                android:textColor="#498BF4"
                android:text="2017-01-01" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="8">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="需求人员:" />


            <TextView
                android:id="@+id/txv_applier_user"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textColor="#498BF4"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="张三" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="提交时间:" />

            <TextView
                android:id="@+id/txv_submit_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="right"
                android:padding="5dp"
                android:text="10000"
                android:textColor="#498BF4" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="8">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="备注:" />

            <TextView
                android:id="@+id/txv_remark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="#ffffff"
                android:gravity="right"
                android:padding="5dp"
                android:text="10000"
                android:textColor="#498BF4" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_drop_shadow"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="8">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="预算总额:" />


            <TextView
                android:id="@+id/txv_bugdet_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="张三"
                android:textColor="#498BF4" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="已审批额:" />

            <TextView
                android:id="@+id/txv_bugdet_demand_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="right"
                android:padding="5dp"
                android:text="10000"
                android:textColor="#498BF4" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="8">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="实际成本:" />


            <TextView
                android:id="@+id/txv_actual_cost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="张三"
                android:textColor="#498BF4" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="需求额:" />

            <TextView
                android:id="@+id/txv_header_bugdet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="right"
                android:padding="5dp"
                android:text="10000"
                android:textColor="#498BF4" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="8">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="余额:" />


            <TextView
                android:id="@+id/txv_bugdet_balance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="张三"
                android:textColor="#498BF4" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="left"
                android:padding="5dp"
                android:text="未审批额:" />

            <TextView
                android:id="@+id/txv_left_bugdet_demand_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:gravity="right"
                android:padding="5dp"
                android:text="10000"
                android:textColor="#498BF4" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
