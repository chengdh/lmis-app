<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageHeaderView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >

    <com.lmis.util.controls.LmisTextView
        android:id="@+id/txvMessageHeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:text="@string/message_waiting_for_sync_to_start"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.lmis.util.controls.LmisTextView
        android:id="@+id/txvMessageHeaderSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/message_your_message_will_appear_shortly"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>