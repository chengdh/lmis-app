<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2014-09-13"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txv_bill_date"
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_margin="8dp" />

    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="邯郸"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txv_org_name"
        android:layout_margin="8dp" />

    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txv_bill_no"
        android:layout_margin="8dp"
        android:text="4000003/140901A邯5-3" />

    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txv_exception_type"
        android:layout_margin="8dp"
        android:text="缺失" />

    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txv_except_num"
        android:layout_margin="8dp"
        android:text="4" />

    <TextView
        style="?android:attr/listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txv_note"
        android:layout_margin="8dp"
        android:text="备注"
        android:lines="2" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/img_photo"
        android:padding="8dp"
        android:src="@android:drawable/ic_menu_gallery" />

</LinearLayout>