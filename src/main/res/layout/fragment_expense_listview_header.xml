<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/expenseHeaderView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >

    <com.lmis.util.controls.LmisTextView
        android:id="@+id/txvExpenseHeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:text="@string/expense_waiting_for_sync_to_start"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.lmis.util.controls.LmisTextView
        android:id="@+id/txvExpenseHeaderSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/expense_your_expense_will_appear_shortly"
        android:textAppearance="?android:attr/textAppearanceMedium" />
</LinearLayout>
